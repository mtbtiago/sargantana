<table id="sort-table" class="table table-bordered table-hover table-condensed">
  <thead>
  <tr>
    <th>Referencia</th>
    <th>Nombre</th>
    <th>Stock</th>
    <th>Color</th>
    <th>Talla</th>
    <th>CÃ³digo</th>
  </tr>
  </thead>
  <tbody>
    <% ant_referencia = nil%>
    <% @articulos.each do |articulo| %>
      <% if articulo.referencia == ant_referencia %>
        <tr>
      <% else %>
        <tr class="lead">
        <% ant_referencia = articulo.referencia %>
      <% end %>
        <td><%= articulo.referencia %></td>
        <td><%= articulo.nombre %></td>
        <td><p class="text-center"><%= articulo.stock %></p></td>
        <td><%= articulo.nombre_color %></td>
        <td><p class="text-center"><%= articulo.nombre_talla %></p></td>
        <td><%= articulo.codigo %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
  <%= page_entries_info @articulos %>
</div>
  
<nav>
  <%= will_paginate @articulos, renderer: BootstrapPagination::Rails %>
</nav>
