<div class="container">
  <div class="row">
    <div class="col-md-12">
      <table id="sort-table" class="table table-striped tablesorter">
        <thead>
        <tr>
          <th>Referencia</th>
          <th>Nombre</th>
          <th>Stock</th>
          <th>Color</th>
          <th>Talla</th>
          <th>Codigo</th>
        </tr>
      </thead>
      <tbody>
        <% @articulos.each do |articulo| %>
        <tr>
          <td><%= articulo.referencia %></td>
          <td><%= articulo.nombre %></td>
          <td><%= articulo.stock %></td>
          <td><%= articulo.nombre_color %></td>
          <td><%= articulo.nombre_talla %></td>
          <td><%= articulo.codigo %></td>
        </tr>
        <% end %>
      </tbody>
      </table>
      
      <nav>
        <%= will_paginate @articulos, renderer: BootstrapPagination::Rails %>
      </nav>
    </div>
  </div>
</div>


